            </div>
        </div>
        <div class="col-lg-4 col-md-12 col-sm-12">
            <form class="p-3" method="post" asp-controller="User" asp-action="Index">
                @{
                    if (ViewBag.LoginStatus != null)
                    {
                        if (ViewBag.LoginStatus == 0)
                        {
                    <span class="text-danger alert-danger">Invalid credentials try to register!</span>
                        }
                    }
                }

                @{
                    if (TempData["accessDenied"] != null)
                    {
                    <span class="text-danger alert-danger">Please login!!</span>
                    }
                }

                @{
                    if (TempData["passwordChanged"] != null)
                    {
                    <span class="text-danger alert-success">Password changed!</span>
                    }
                }

                @*<input type="text" asp-for="FirstName" hidden/>*@

                <div class="mb-3">

                    <label for="exampleInputEmail1" class="form-label">Email address</label>
                    <input for="exampleInputEmail1" asp-for="Email" type="email" class="form-control" id="login--email" placeholder="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>



                </div>
                <div class="mb-5">
                    <label for="exampleInputPassword1" class="form-label">Password</label>
                    <input type="password" asp-for="Password" class="form-control" id="login--password" placeholder="Password...">
                    <span asp-validation-for="Password" class="text-danger"></span>


                </div>

                <button type="submit" class="btn btn-primary mb-5">Login</button>


                <div class="lost-password-reg">
                    <a asp-action="ForgotPassword" asp-controller="User"><p id="lost-password-para">Lost your password?</p></a>
                    <p id="reg-para">Don’t have an account?<a asp-action="Registration" asp-controller="User"><span>Create an account</span></a></p>
                </div>


            </form>

            <div class="privacy-policy">
                <p>Privacy policy</p>
            </div>

        </div>
